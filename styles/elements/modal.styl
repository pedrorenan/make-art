.flexcenter 
    display flex
    flex-direction column
    justify-content center
    align-items center

.flexcenter-top
    display flex
    justify-content center
    align-items flex-start

.modal-overlay
    absolute-cover()
    background rgba(#000, .8)
    transition opacity .2s
    position fixed
    z-index 9

    display flex
    flex-direction column
    justify-content center
    align-items center
    

    &, h1, h2, h3, h4, h5
        color color-black
        font-weight normal
        text-transform uppercase
        margin-bottom 30px

    &.out
        opacity 0

.modal-inner
    border-radius()
    background color-white
    box-sizing border-box
    padding 25px
    min-height 50px
    position relative
    max-width: 680px

    button.close
        button-color(color-white, color-grey)
        padding 0
        font-size 12px
        text-align center
        position absolute
        right 10px
        top 20px
        width 30px
        line-height @width

        &:hover
            background color-grey-mid

        i
            position relative
            left 0
            top 1px

    &.size-small
        width 300px
        margin-left -150px

    p:last-child
        margin-bottom 0

    h1, h2, h3, h4, h5, h6

        &:first-child
            margin-top -10px

    &.split-modal
        padding-bottom 85px

        .bottom-section
            position absolute
            bottom 0
            left 0
            right 0
            background color-grey-mid
            border-bottom-left-radius 3px
            border-bottom-right-radius 3px

            button, .button
                margin 20px
                color color-white
                background color-green

                &:hover
                    background lighten(color-green, 5)
